{
  "name": "atv-remote",
  "productName": "ATV Remote",
  "version": "1.0.7",
  "description": "Multiplatform ATV Remote Control",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "backend:dev": "cd backend && python main.py",
    "icons": "./scripts/generate-icons.sh",
    "backend:build": "./scripts/build-backend.sh",
    "prebuild": "npm run backend:build && npm run icons",
    "preelectron:build": "npm run backend:build && npm run icons"
  },
  "keywords": [
    "apple-tv",
    "remote",
    "electron",
    "vue"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^39.1.1",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vue-tsc": "^1.8.27",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "vue": "^3.4.19",
    "vue-router": "^4.3.0"
  }
}
